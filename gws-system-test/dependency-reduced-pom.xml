<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>gws-parent</artifactId>
    <groupId>au.gov.ga.geodesy.gws</groupId>
    <version>0.1.3</version>
    <relativePath>../gws-parent/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>au.gov.ga.geodesy.gws</groupId>
  <artifactId>gws-system-test</artifactId>
  <name>Geodesy Web Services System Tests</name>
  <version>0.1.3</version>
  <scm>
    <connection>scm:git:git@github.com:GeoscienceAustralia/geodesy-web-services.git</connection>
    <developerConnection>scm:git:git@github.com:GeoscienceAustralia/geodesy-web-services.git</developerConnection>
    <url>http://github.com/GeocienceAustralia/geodesy-web-services/gws-system-test</url>
  </scm>
  <build>
    <finalName>gws-system-test</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.0.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <mainClass>org.testng.TestNG</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.0.2</version>
        <executions>
          <execution>
            <goals>
              <goal>test-jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skipTests>${skipUnitTests}</skipTests>
          <argLine>-Djava.awt.headless=true</argLine>
          <excludes>
            <exclude>**/*SystemTest.java</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
        <executions>
          <execution>
            <id>run-systems-tests</id>
            <goals>
              <goal>integration-test</goal>
            </goals>
            <configuration>
              <skipTests>${skipSystemTests}</skipTests>
              <defaultGoal>integration-test</defaultGoal>
              <suiteXmlFiles>
                <suiteXmlFile>src/main/resources/testng.xml</suiteXmlFile>
              </suiteXmlFiles>
              <argLine>-Djava.awt.headless=true</argLine>
            </configuration>
          </execution>
          <execution>
            <id>verify-system-tests</id>
            <phase>verify</phase>
            <goals>
              <goal>verify</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>checker</id>
      <build>
        <defaultGoal>compile</defaultGoal>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.3</version>
            <configuration>
              <source>${java.version}</source>
              <target>${java.version}</target>
              <fork>true</fork>
              <annotationProcessors>
                <annotationProcessor>org.checkerframework.checker.nullness.NullnessChecker</annotationProcessor>
              </annotationProcessors>
              <compilerArgs>
                <arg>-Xbootclasspath/p:${annotatedJdk}</arg>
              </compilerArgs>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-all</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-test</artifactId>
        <version>${spring.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <properties>
    <encoding>UTF-8</encoding>
    <java.version>1.8</java.version>
    <github.global.server>github</github.global.server>
    <snippetsDirectory>${project.build.directory}/generated-snippets</snippetsDirectory>
    <schemacrawler.plugin.version>14.07.04</schemacrawler.plugin.version>
    <aspectj.version>1.8.6</aspectj.version>
    <checker-framework.version>2.0.1</checker-framework.version>
    <maven.compiler.target>${java.version}</maven.compiler.target>
    <skipCreateDb>false</skipCreateDb>
    <annotatedJdk>${org.checkerframework:jdk8:jar}</annotatedJdk>
    <dependency.locations.enabled>false</dependency.locations.enabled>
    <skip.system.tests>true</skip.system.tests>
    <rest-assured.version>3.0.0</rest-assured.version>
    <maven.compiler.source>${java.version}</maven.compiler.source>
  </properties>
</project>

