<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class
    name="au.gov.ga.geodesy.igssitelog.domain.model.CollocationInformation"
    table="SITELOG_COLLOCATION">
    <id
      name="id"
      type="java.lang.Integer">
      <column
        name="COLLOCATIONNO"
        precision="9"
        scale="0" />
	  
	  <generator class="sequence">
		  <param name="sequence">SEQ_COLLOCATIONINFORMATION</param>
	  </generator>
    </id>

    <property name="instrumentType" column="INSTRUMENT_TYPE"/>
    <property name="status" column="STATUS"/>
    <property name="notes" column="NOTES"/>

    <component name="effectiveDates" class="au.gov.ga.geodesy.igssitelog.domain.model.EffectiveDates">
       <property name="from" column="EFFECTIVE_FROM"/> 
       <property name="to" column="EFFECTIVE_TO"/>
    </component>
  </class>
</hibernate-mapping>
